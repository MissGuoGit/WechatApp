/* pages/cooker/cooker.wxss */
.searchbox{
    width:calc(100% - 40rpx);
    height:90rpx;
    background-color:rgb(248, 248, 248);
    margin:0 auto;
    border-radius: 45rpx;
    position: relative;/*给图标的父容器加一个相对定位的属性，把他作为定位的参考对象。*/
  }
  
  .searchbox input{
    height: 90rpx;
    margin: 0 100rpx;
  }
  
  .searchbox image{
    width: 50rpx;
    position: absolute;
    left:20rpx;
    top:22rpx;
  }
  page{
    width: 100%;
    height: 100%;
  }
  
  .listbox{
    width: 100%;
    height:calc(100% - 95rpx);
    overflow-y: scroll;
  }
  
  .fooditem{
    height:270rpx;
    border-bottom: solid 1rpx #F1F1F1;
    position: relative;
  }
  
  .fooditem image{
    width: 220rpx;
    margin: 20rpx;
  }
  .rightbox{
    width:calc(100% - 260rpx);
    height: 270rpx;
    position: absolute;
    right: 0;
    top: 0;
  }
  .line1{
    font-size: 45rpx;
    font-weight: bold;
    padding-top: 10rpx;
    position: relative;/*把line1这个盒子作为定位的参考对象*/
  }
  .line1 image
  {
    width: 100rpx;
    position: absolute;
    right: 20rpx;
    top:5rpx;
  }
  
  .line2{
    color: #898989;
    padding: 20rpx 0;
  }
  
  .line3{
    color: #F76558;
    line-height:70rpx;
  }
  
  .line4 text{
    font-size: 26rpx;
    padding:2rpx 10rpx;
    margin-right: 10rpx;
  }
.line4 text:nth-of-type(1){
    border:solid 1px #E0C99F;
    color: #E0C99F;
   
}
.line4 text:nth-of-type(2){
    border:solid 1px #00B26A;
    color: #00B26A;
}
.line4 text:nth-of-type(3){
    border:solid 1px rgb(224, 59, 67);
    color: rgb(224, 59, 67);
}
  .itemhover{
    background-color: #eee;
  }
  