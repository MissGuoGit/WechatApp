/* pages/zc/zc.wxss */
.header{
  height: 200rpx;
  /* background-color:#ff6855; */
  color: #ff6855;
  margin: 0 auto;
  text-align: center;
  line-height: 200rpx;
  font-size: 55rpx;
}
  .itembox{
    width: 100%;
  }
  .first{
    /* border-top: solid 1px #eee; */
    margin-top: 3rpx;
  }
  /* .fitem text{ border-bottom: rgb(195, 195, 195) solid 1px; } */
  .username{
    font-size: 55rpx;
  }
  .subtitle{
    color: #ccc;
  }
  .header image{
    width: 200rpx;
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    border-radius: 100rpx;
  }
  .itembox .item{
    border-bottom: solid 1px #eee;
    height:90rpx;
    line-height:90rpx;
    padding: 0 20rpx;
  }
  .itembox image{
    width: 200rpx;
  }
  
  .fitem{
    height:90rpx;
    width: 85%;
    margin: 0 auto;
    border: solid 1px #eee;
    position: relative;
    line-height: 90rpx;
    padding: 0rpx 20rpx 0 0;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow: rgba(0,0,0,.2) 0 1px 8px 0px;
  }
  .lastitem{
    width: 30%;
    margin-left: 7.5%;
    position: relative;
  }
  .imgload{
    width: 30%;
    height: 83%;
    line-height: 83%;
    text-align: center;
    border: solid 2px #eee;
    position: absolute;
    right: 2%;
    top: 6%;
    font-size: 50rpx;
    color: rgb(136, 134, 134);
    padding-top: 4%;
    box-sizing: border-box;
  }
  .imgload image{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 100;
  }
  .fitem text{
    width: 180rpx;
    /* font-weight: bold; */
    text-align: center;
    display: inline-block;
    /* background-color: #eee; */
    border-radius: 20rpx 0 0 20rpx;
    font-size: 26rpx;
    font-weight: bolder;
    color: rgb(98, 97, 97);

  }
  .input-placeholder{
    color: rgb(188, 185, 185);
  }
  .fitem-big{
    height:220rpx;
    border-bottom: solid 1px #eee;
    position: relative;
    line-height: 90rpx;
    padding: 0 20rpx;
  }
  
  .fitem input{
    width:calc(100% - 220rpx);
    position: absolute;
    right: 0;
    top: 0;
    height: 90rpx;
    line-height: 90rpx;
  }
  
  .fitem-big textarea{
    width:calc(100% - 220rpx);
    position: absolute;
    right: 0;
    top: 10rpx;
    line-height:60rpx;
    max-height: 200rpx;
  }
  .zhuce{
    width:40%;
    height:80rpx;
    line-height:80rpx;
    text-align: center;  
    border-radius: 10rpx;
    margin-left:50%;
    margin-top: 50rpx;
    background-color: #ff6855;
    color: #fff;
    /* border: solid 1px #ff6855; */
    box-shadow: rgba(0,0,0,.2) 0 1px 8px 0px;
  }
  .btnreg{
    width:calc(100% - 30rpx);
    height:80rpx;
    line-height:80rpx;
    text-align: center;  
    border-radius: 10rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    background-color: #ff6855;
    color: #fff;
    border: solid 1px #ff6855;
  }
  .hoverclass{
    background-color:#eee;
    border: solid 1px #ccc;
    color: #333;
  }
  .box{
    height: 200rpx;
    width: 200rpx;
    font-size: 100rpx;
    color: gray;
    margin: 0 auto;
    border: solid 1rpx black;
    text-align: center;
    line-height: 190rpx;
    background-color: #eee;
  }
  .photo{
    text-align: right;
    width: 200rpx;
    font-weight: bold;
  }
  
  .msg{
    width: 100%;
    font-size: 30rpx;
    color: red;
    margin-top: 20rpx;
    text-align: center;
    /* position: absolute;
    right: 0; */
  }
  