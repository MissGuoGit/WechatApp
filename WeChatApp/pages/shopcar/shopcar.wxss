/* pages/shopcar/shopcar.wxss */
page{
    width: 100%;
    height: 100%;
  }
  .container{
    width: 100%;
    height: 100%;
  }
  .searchbox{
    width:calc(100% - 40rpx);
    height:90rpx;
    background-color:#F1F1F1;
    margin:0 auto;
    border-radius: 45rpx;
    position: relative;/*给图标的父容器加一个相对定位的属性，把他作为定位的参考对象。*/
  }
  
  .searchbox input{
    height: 90rpx;
    margin: 0 100rpx;
  }
  
  .searchbox image{
    width: 50rpx;
    position: absolute;
    left:20rpx;
    top:22rpx;
  }
  
  .listbox{
    width: 100%;
    height:calc(100% - 182rpx);
    overflow-y: scroll;
  }
  
  .fooditem{
    height:270rpx;
    border-bottom: solid 1rpx #F1F1F1;
    position: relative;
  }
  
  .fooditem image{
    width: 220rpx;
    margin: 20rpx;
  }
  .rightbox{
    width:calc(100% - 260rpx);
    height: 270rpx;
    position: absolute;
    right: 0;
    top: 0;
  }
  .line1{
    font-size: 45rpx;
    font-weight: bold;
    padding-top: 10rpx;
  }
  .line2{
    color: #898989;
  }
  
  .line3{
    color: #F76558;
    line-height:70rpx;
  }
  
  .line4 text{
    border:solid 1px #E0C99F;
    color: #E0C99F;
    padding:2rpx 20rpx;
    margin-right: 10rpx;
  }
  
  .itemhover{
    background-color: #eee;
  }
  .fooditem image.btndel{
    width:60rpx;
    position: absolute;
    right: 5rpx;
    bottom:22rpx;
  }
  
  .btngotobuy{
    width: 100%;
    height:88rpx;
    background-color: #F76558;
    text-align: center;
    line-height: 88rpx;
    color: white;
  }
  
  .hoverclass{
    opacity: 0.8;
  }
  
  .sendinfobox{
    width: 100%;
    height:calc(100% - 90rpx);
    background-color: #fff;
    position: absolute;
    left: 0;
    top: 0;
  }
  
  .fline{
    position: relative;/*作为定位的参考*/
    padding-left: 20rpx;
    border-bottom: solid 1rpx #eee;
    height: 75rpx;
    line-height: 75rpx;
    font-weight: bold;
  }
  
  .fline input{
    position: absolute;
    left:220rpx;
    top: 0;
    font-weight: lighter;
    height: 75rpx;
    line-height: 75rpx;
  }
  /* 没有菜品提示信息 */
  .msg{
    width: 100%;
    line-height: 40rpx;
    text-align: center;
    color: #F76558;
    margin-top:50%;
    font-size: 30rpx;
  }