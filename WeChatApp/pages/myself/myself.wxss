/* pages/myself/myself.wxss */
/* 用户信息开始 */
.user_infor{
    width: 100%;
    height: 210rpx;
    border-bottom:1rpx solid #efefef;
    margin:40rpx 30rpx;
    position: relative;
    /* background-color: burlywood; */
}
.user_infor view:nth-child(1){
    font-size: 40rpx;
    line-height: 41rpx;
    color: black;
    position: absolute;
    top: 22rpx;
}
.user_infor view:nth-child(2){
    font-size: 28rpx;
    line-height: 29rpx;
    color: #9f9f9f;
    position: absolute;
    top: 85rpx;
}
.user_infor image{
    display: block;
    width: 132rpx;
    height: 132rpx;
    /* background-color: red; */
    border-radius: 50%;
    position: absolute;
    top: 0rpx;
    right: 60rpx;
    font-weight: bold;
}
/* 用户信息结束 */
.item{
    width: 100%;
    height:100rpx;
    /* background-color: red; */
    position: relative;
}
.item image{
    width: 80rpx;
    margin:10rpx 0 0 10rpx;
}
.item .rightbox{
    width: calc(100% - 120rpx);
    height: 100rpx;
    line-height: 100rpx;
    /* background-color: blue; */
    position: absolute;
    top: 0;
    right: 0;
    border-bottom: solid 1px #eee;
    /* background-color: red; */
}
.item .rightbox image{
    width: 30rpx;
    height: 40rpx;
    position: absolute;
    top: 6rpx;
    right: 20rpx;
}
.hoveritem{
    background-color: #eee;
    /* background-color: ; */
}